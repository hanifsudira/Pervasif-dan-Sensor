<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_program"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mobile.its.ac.id.sensor.StartProgram">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="30dp" />

            <TextView
                android:id="@+id/valuelight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textlight"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/valuelight"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal"
                android:text="Not Record Data"
                android:textSize="30dp" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/record"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif"
                    android:text="Acceleremoter : " />

                <TextView
                    android:id="@+id/rx"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:fontFamily="sans-serif-thin"
                    android:text="X : -"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/ry"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:fontFamily="sans-serif-thin"
                    android:text="Y : -"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/rz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:fontFamily="sans-serif-thin"
                    android:text="Z : -"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gyro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout1"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif"
                    android:text="Gyrometer : " />

                <TextView
                    android:id="@+id/gx"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:fontFamily="sans-serif-thin"
                    android:text="X : -"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/gy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:fontFamily="sans-serif-thin"
                    android:text="Y : -"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/gz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:fontFamily="sans-serif-thin"
                    android:text="Z : -"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gyro"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal"
                android:text="Tidak Kenapa"
                android:textSize="20sp" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
